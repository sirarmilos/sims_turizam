<Window x:Class="InitialProject.View.Guest2Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View"
        mc:Ignorable="d"
        Title="Guest2Start" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock ="Top">
                <MenuItem Header="Search and show tours" Click="GoToSearchAndShowTours" />
                <MenuItem Header="Tour attendance" Click="ShowTourAttendance" />
                <MenuItem Header="User info" Click="ShowUserInfo" />
                <MenuItem Header="Notification page" Click="ShowNotifications" />
                <MenuItem Header="Rate guide" Click="RateGuide" />
                <MenuItem Header="Logout" Click="GoToLogout"/>
            </Menu>
            <Grid DockPanel.Dock="Bottom" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="363*"/>
                    <ColumnDefinition Width="232*"/>
                    <ColumnDefinition Width="205*"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
