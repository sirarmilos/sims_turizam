<Window x:Class="InitialProject.View.ShowGuestReviews"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View"
        mc:Ignorable="d"
        Title="Show guest reviews" Height="775" Width="1400"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="55" />
            <RowDefinition Height="425" />
            <RowDefinition Height="270" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1400" />
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3">

            <Menu x:Name="menuOwner" DockPanel.Dock ="Top">

                <MenuItem Header="Home" Command="{Binding GoToOwnerHomePageLoginCommand}"/>
                <MenuItem Header="Accommodation"  Command="{Binding GoToAccommodationStartCommand}"/>
                <MenuItem Header="Management of booking move requests" Command="{Binding GoToShowOwnerManageBookingMoveRequestsCommand}"/>
                <MenuItem Header="Renovate" Command="{Binding GoToShowAndCancellationRenovationCommand}"/>
                <MenuItem Header="Rate guests" Command="{Binding GoToRateGuestsCommand}"/>
                <MenuItem Header="Guest reviews" Command="{Binding GoToShowGuestReviewsCommand}"/>
                <MenuItem Header="Forum" Command="{Binding GoToOwnerForumCommand}"/>
                <MenuItem x:Name="usernameAndSuperOwner" Header="{Binding UsernameAndSuperOwner}" IsEnabled="False"/>
                <MenuItem Header="Logout" Command="{Binding GoToOwnerHomePageNotLoginCommand}"/>
                <MenuItem x:Name="notifications" Header="Notifications">
                    <MenuItem x:Name="rateGuestsNotifications" Header="{Binding RateGuestsNotifications}"/>
                    <MenuItem x:Name="cancelledReservationsNotifications" Header="Cancelled reservations"/>
                    <ItemsControl ItemsSource="{Binding UnreadCancelledReservations, Mode=TwoWay}" x:Name="cancelledReservationsNotificationsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <MenuItem Header="{Binding}" Command="{Binding ReadCancelledReservationNotificationCommand}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </MenuItem>

            </Menu>

        </DockPanel>

        <Label x:Name="labelAListOfAllGuestReviews" Grid.Column="0" Grid.Row="1" Content="A list of all guest reviews" HorizontalAlignment="Left" Height="30" VerticalAlignment="Bottom" Width="280"/>

        <DataGrid x:Name="dgShowGuestReviews" LoadingRow="LoadingRowForDgShowGuestReviews" Grid.Column="0" Grid.Row="2" ItemsSource="{Binding ShowGuestReviewsDTOs, Mode=OneWay}" AutoGenerateColumns="False" SelectionMode="Single" SelectionUnit="FullRow" IsReadOnly="True" HorizontalAlignment="Center" Height="400" VerticalAlignment="Bottom" Width="1350">
            
            <DataGrid.Columns>
                
                <DataGridTextColumn Header="Accommodation name" Binding="{Binding AccommodationName}" Width="150"/>
                <DataGridTextColumn Header="Guest username" Binding="{Binding GuestUsername}" Width="*"/>
                <DataGridTextColumn Header="Cleanliness" Binding="{Binding Cleanliness}" Width="*"/>
                <DataGridTextColumn Header="Staff" Binding="{Binding Staff}" Width="*"/>
                <DataGridTextColumn Header="Comfort" Binding="{Binding Comfort}" Width="*"/>
                <DataGridTextColumn Header="Value for money" Binding="{Binding ValueForMoney}" Width="*"/>
                <DataGridTextColumn Header="Comment" Binding="{Binding Comment}" Width="*"/>
            
            </DataGrid.Columns>
            
        </DataGrid>

        <Button x:Name="buttonAcceptRequest" Grid.Column="0" Grid.Row="3" Content="Report on average Guest rate for each accommodation" HorizontalAlignment="Center" Height="50" VerticalAlignment="Center" Width="350"/>

    </Grid>
    
</Window>
