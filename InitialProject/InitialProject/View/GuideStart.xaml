<Window x:Class="InitialProject.View.GuideStart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View"
        mc:Ignorable="d"
        Title="GuideStart" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock ="Top">
                <MenuItem Header="Add new tour" Click="GoToAddNewTour" />
                <MenuItem Header="Show tours for guide" Click="GoToShowTourGuidences" />
                <MenuItem Header="Future Tours" Click="GoToFutureTours" />
                <MenuItem Header="Logout" Click="GoToLogout"/>
            </Menu>
            <Grid DockPanel.Dock="Bottom" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="119*"/>
                    <ColumnDefinition Width="41*"/>
                </Grid.ColumnDefinitions>
                <TextBlock HorizontalAlignment="Left" Margin="205,179,0,0" TextWrapping="Wrap" Text="{Binding tour.TourName}" VerticalAlignment="Top" Width="74"/>
                <TextBlock HorizontalAlignment="Left" Margin="313,179,0,0" TextWrapping="Wrap" Text="{Binding tour.Location.Country}" VerticalAlignment="Top" Width="74"/>
                <TextBlock HorizontalAlignment="Left" Margin="437,178,0,0" TextWrapping="Wrap" Text="{Binding tour.Location.City}" VerticalAlignment="Top" Width="74"/>
                <TextBlock HorizontalAlignment="Left" Margin="558,177,0,0" TextWrapping="Wrap" Text="{Binding tour.Language}" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="74"/>
                <Label Content="Most Visited Tour All Time: " HorizontalAlignment="Left" Margin="12,174,0,0" VerticalAlignment="Top" Width="165"/>

                <TextBlock HorizontalAlignment="Left" Margin="205,233,0,0" TextWrapping="Wrap" Text="{Binding tourFiltered.TourName}" VerticalAlignment="Top" Width="74"/>
                <TextBlock HorizontalAlignment="Left" Margin="313,232,0,0" TextWrapping="Wrap" Text="{Binding tourFiltered.Location.Country}" VerticalAlignment="Top" Width="74"/>
                <TextBlock HorizontalAlignment="Left" Margin="437,231,0,0" TextWrapping="Wrap" Text="{Binding tourFiltered.Location.City}" VerticalAlignment="Top" Width="74"/>
                <TextBlock HorizontalAlignment="Left" Margin="558,231,0,0" TextWrapping="Wrap" Text="{Binding tourFiltered.Language}" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="74"/>
                <Label Content="Most Visited Tour For Spec. Year: " HorizontalAlignment="Left" Margin="12,226,0,0" VerticalAlignment="Top" Width="188"/>


            </Grid>
        </DockPanel>
    </Grid>
</Window>
